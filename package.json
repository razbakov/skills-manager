{
  "name": "skills-manager",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "setup": "bun install && bun src/index.ts --install",
    "electron": "NODE_OPTIONS='--import tsx' electron src/electron/main.ts",
    "electron:v2:build": "cd src/electron-v2 && bun x vite build",
    "electron:v2": "bun run electron:v2:build && SKILLS_V2=1 NODE_OPTIONS='--import tsx' electron src/electron/main.ts"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "lucide-vue-next": "^0.575.0",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.0",
    "vue": "^3.5.28"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "bun-types": "^1.3.8",
    "electron": "^36.0.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.0",
    "vite": "^7.3.1"
  }
}
